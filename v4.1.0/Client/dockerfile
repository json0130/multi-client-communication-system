# Start from the Jetson-compatible Ultralytics image
FROM ultralytics/ultralytics:latest-jetson-jetpack4

# Install necessary system dependencies
RUN apt-get update && \
    apt-get install -y \
    curl libssl-dev libusb-1.0-0-dev libudev-dev \
    pkg-config libgtk-3-dev libglfw3-dev libgl1-mesa-dev \
    espeak espeak-data libespeak-dev libpulse-dev alsa-utils \
    libportaudio2 libportaudiocpp0 portaudio19-dev \
    ffmpeg python3-dev python3-pip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip first
RUN pip3 install --upgrade pip

# Install Python dependencies in order
RUN pip3 install \
    openai \
    python-dotenv \
    pyrealsense2 \
    albumentations \
    pyserial \
    pyttsx3 \
    python-socketio[client] \
    websocket-client \
    edge-tts

# Build PyAudio from source to avoid _portaudio error
RUN pip3 install --no-binary :all: pyaudio

# Set working directory
WORKDIR /app

# Copy your application code into the container
COPY . /app

# Expose port for web streaming
EXPOSE 8080

# Default command
CMD ["bash"]
